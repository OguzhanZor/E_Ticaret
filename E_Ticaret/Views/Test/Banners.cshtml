@{
    ViewData["Title"] = "Test Banners";
}

<div class="container mt-4">
    <h2>Banner Test Sayfası</h2>
    
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <strong>Hata:</strong> @ViewBag.ErrorMessage
        </div>
    }
    
    <div class="card">
        <div class="card-header">
            <h5>Veritabanındaki Banner'lar (@ViewBag.BannerCount)</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.Banners != null)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>Alt Başlık</th>
                            <th>Buton Metni</th>
                            <th>Buton URL</th>
                            <th>Resim URL</th>
                            <th>Sıra</th>
                            <th>Aktif</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var banner in ViewBag.Banners)
                        {
                            <tr>
                                <td>@banner.Id</td>
                                <td>@banner.Title</td>
                                <td>@banner.Subtitle</td>
                                <td>@banner.ButtonText</td>
                                <td>@banner.ButtonUrl</td>
                                <td>@banner.ImageUrl</td>
                                <td>@banner.DisplayOrder</td>
                                <td>@banner.IsActive</td>
                                <td>@banner.StartDate?.ToString("dd.MM.yyyy")</td>
                                <td>@(banner.EndDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Banner verisi bulunamadı.</p>
            }
        </div>
    </div>
    
    <div class="mt-3">
        <a href="/Test" class="btn btn-secondary">Ana Test Sayfasına Dön</a>
    </div>
</div>
