@model IEnumerable<E_Ticaret.Models.Slider>
@{
    ViewData["Title"] = "Slider Yönetimi";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="material-icons md-slideshow"></i> Slider Yönetimi
                </h2>
                <a href="@Url.Action("CreateSlider", "Admin")" class="btn btn-primary">
                    <i class="material-icons md-add"></i> Yeni Slider
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="material-icons md-check_circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="material-icons md-error"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="material-icons md-list"></i> Slider Listesi
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="slidersTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Başlık</th>
                                        <th>Alt Başlık</th>
                                        <th>Görsel</th>
                                        <th>Sıra</th>
                                        <th>Durum</th>
                                        <th>Başlangıç</th>
                                        <th>Bitiş</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slider in Model)
                                    {
                                        <tr>
                                            <td>@slider.Id</td>
                                            <td>@slider.Title</td>
                                            <td>@slider.Subtitle</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(slider.ImageUrl))
                                                {
                                                    <img src="@Url.Content(slider.ImageUrl)" alt="@slider.Title" style="width: 80px; height: 45px; object-fit: cover;" class="img-thumbnail" />
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="me-2">@slider.DisplayOrder</span>
                                                    <div class="btn-group-vertical btn-group-sm">
                                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="updateSliderDisplayOrder(@slider.Id, @(slider.DisplayOrder - 1))">
                                                            <i class="material-icons md-keyboard_arrow_up"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="updateSliderDisplayOrder(@slider.Id, @(slider.DisplayOrder + 1))">
                                                            <i class="material-icons md-keyboard_arrow_down"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (slider.IsActive)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                            </td>
                                            <td>@slider.StartDate.ToString("dd.MM.yyyy")</td>
                                            <td>@(slider.EndDate?.ToString("dd.MM.yyyy") ?? "")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("EditSlider", "Admin", new { id = slider.Id })" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                        <i class="material-icons md-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("DeleteSlider", "Admin", new { id = slider.Id })" class="btn btn-sm btn-outline-danger" title="Sil">
                                                        <i class="material-icons md-delete"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="material-icons md-slideshow" style="font-size: 4rem; color: #ccc;"></i>
                            <h5 class="text-muted mt-3">Henüz slider eklenmemiş</h5>
                            <p class="text-muted">İlk slider'ı eklemek için "Yeni Slider" butonuna tıklayın.</p>
                            <a href="@Url.Action("CreateSlider", "Admin")" class="btn btn-primary">
                                <i class="material-icons md-add"></i> İlk Slider'ı Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            window.updateSliderDisplayOrder = function(sliderId, displayOrder) {
                $.ajax({
                    url: '@Url.Action("UpdateSliderDisplayOrder", "Admin")',
                    type: 'POST',
                    data: { id: sliderId, displayOrder: displayOrder },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert(response.message || 'Sıra güncellenirken hata oluştu');
                        }
                    },
                    error: function() {
                        alert('Sıra güncellenirken hata oluştu');
                    }
                });
            };
        });
    </script>
}

<style>
    .btn-group-vertical .btn { margin-bottom: 2px; padding: 2px 4px; font-size: 12px; }
    .table th { vertical-align: middle; font-weight: 600; cursor: pointer; }
    .table td { vertical-align: middle; }
    .img-thumbnail { border: 1px solid #dee2e6; }
</style>


