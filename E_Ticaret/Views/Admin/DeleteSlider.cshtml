@model E_Ticaret.Models.Slider
@{
    ViewData["Title"] = "Slider Sil";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5>Bu slider'ı silmek istediğinize emin misiniz?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3">Başlık</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">Alt Başlık</dt>
            <dd class="col-sm-9">@Model.Subtitle</dd>
            <dt class="col-sm-3">Görsel</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Title" style="width: 200px; height: 100px; object-fit: cover;" />
                }
            </dd>
        </dl>
        <form asp-action="DeleteSlider" method="post">
            <input asp-for="Id" type="hidden" />
            <a href="@Url.Action("Sliders", "Admin")" class="btn btn-secondary">İptal</a>
            <button type="submit" class="btn btn-danger">Sil</button>
        </form>
    </div>
</div>


