@model E_Ticaret.Controllers.B2BViewModel
@{
    ViewData["Title"] = "B2B Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="material-icons md-business"></i> B2B Dashboard
            </h2>
        </div>
    </div>

    <div class="row">
        <!-- Ürünler -->
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Ürün
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Products.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="material-icons md-inventory text-primary" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Products", "B2B")" class="btn btn-primary btn-sm">
                        <i class="material-icons md-visibility"></i> Görüntüle
                    </a>
                </div>
            </div>
        </div>

        <!-- Kategoriler -->
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Toplam Kategori
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Categories.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="material-icons md-category text-success" style="font-size: 2rem;"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Categories", "B2B")" class="btn btn-success btn-sm">
                        <i class="material-icons md-visibility"></i> Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="material-icons md-speed"></i> Hızlı İşlemler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Products", "B2B")" class="btn btn-primary btn-lg btn-block">
                                <i class="material-icons md-inventory"></i><br />
                                Ürünler
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Categories", "B2B")" class="btn btn-success btn-lg btn-block">
                                <i class="material-icons md-category"></i><br />
                                Kategoriler
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Orders", "B2B")" class="btn btn-info btn-lg btn-block">
                                <i class="material-icons md-shopping_cart"></i><br />
                                Siparişler
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Reports", "B2B")" class="btn btn-warning btn-lg btn-block">
                                <i class="material-icons md-assessment"></i><br />
                                Raporlar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="material-icons md-error"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }
    .text-gray-800 {
        color: #5a5c69 !important;
    }
    .btn-block {
        display: block;
        width: 100%;
    }
</style>
